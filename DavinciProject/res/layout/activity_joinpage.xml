<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/red_background"
    tools:context="com.example.davinciproject.Joinpage" >

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="44dp"
        android:layout_marginTop="28dp"
        android:text="Nickname :"
        android:textColor="#C5BDBB" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/textView2"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="26dp"
        android:text="Password :"
        android:textColor="#C5BDBB" />

    <EditText
        android:id="@+id/Idform"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="68dp"
        android:ems="10"
        android:hint="아이디를 입력하세요"
        android:textSize="15sp"
        android:textStyle="italic" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/Pwdform"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView3"
        android:layout_alignBottom="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:ems="10"
        android:inputType="textPassword" 
        android:hint="비밀번호를 입력하세요"
        android:textSize="15sp"
        android:textStyle="italic"/>

    <Button
        android:id="@+id/JOKbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="30dp"
        android:onClick="JOKClicked"
        android:text="OK" />

    <EditText
        android:id="@+id/Nickform"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView2"
        android:layout_alignBottom="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="닉네임을 입력하세요"
        android:textSize="15sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/Idform"
        android:layout_alignBottom="@+id/Idform"
        android:layout_alignRight="@+id/textView2"
        android:text="ID :"
        android:textColor="#C5BDBB" />

    <RadioGroup
        android:id="@+id/radioGroup01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/Idform"
        android:layout_alignLeft="@+id/Idform"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/w"
            android:src="@drawable/abc_ab_share_pack_mtrl_alpha" />

        <RadioButton
            android:id="@+id/radioButtonW"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/Idform"
            android:layout_alignRight="@+id/Idform"
            android:layout_marginRight="44dp" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/m"
            android:src="@drawable/abc_ab_share_pack_mtrl_alpha" />

        <RadioButton
            android:id="@+id/radioButtonM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/radioButtonW"
            android:layout_alignBottom="@+id/radioButtonW"
            android:layout_alignLeft="@+id/Idform" />
    </RadioGroup>

</RelativeLayout>